#!/usr/bin/env python

import argparse
import os
import numpy as np
from matplotlib import pyplot as plt
from matplotlib import cm
import matplotlib
matplotlib.rcParams.update({'font.size': 16})
from os import path
from sys import exit

parser = argparse.ArgumentParser(description='Sensitivity experiment grapher')
parser.add_argument('--out', default='.', help='Figure output directory')

args = parser.parse_args()

if not path.exists(args.out):
	os.makedirs(args.out)
	print 'Created output directory %s' % args.out



fig,ax = plt.subplots()
lip_handle = plt.plot(range(0,16), [0, 1, 3, 5, 8, 10, 11, 13, 14, 19, 23, 25, 29, 30, 34, 35], color=cm.Blues(0.35), linewidth=3.0)
bip_handle = plt.plot([0, 1, 2, 4, 8, 16], [0, 3, 7, 7, 17, 30], color=cm.Blues(0.75), linewidth=3.0)
plt.legend([lip_handle[0], bip_handle[0]], ['LIP', 'BIP'], ncol=2, bbox_to_anchor=(1, 1.1))
ax = plt.gca()
ax.get_xaxis().get_major_formatter().set_useOffset(False)

ax.set_ylabel("Utility")
ax.set_xlabel("Ways")


fig.set_size_inches((5.0*2, 2.5*2))
plt.savefig('%s/clu-utility.png' % (args.out), frameon=False, bbox_inches='tight')
plt.cla()